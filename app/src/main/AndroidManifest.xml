<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.marcelodio.listadecompras">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_baseline_shopping_cart_24"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_baseline_shopping_cart_24"
        android:supportsRtl="true"
        android:theme="@style/Theme.ListaDeCompras">
        <activity
            android:name=".feature.produto.SalvarProdutoActivity"
            android:exported="true"
            android:parentActivityName=".feature.produto.ListaDeProdutosActivity"/>
        <activity
            android:name=".feature.produto.ListaDeProdutosActivity"
            android:launchMode="singleTop"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>